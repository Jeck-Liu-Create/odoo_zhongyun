<?xml version="1.0" encoding="utf-8"?> 
<odoo> 
    <record id='helloworld_greeting_action' model='ir.actions.act_window'>
        <field name="name">问候语</field>
        <field name="res_model">helloworld.greeting</field>
        <field name="view_mode">tree,form</field>
    </record>
    
    <menuitem name="Hello World" id="helloworld_base_menu" />
    <menuitem name="问候语" id="helloworld_greeting_menu" parent="helloworld_base_menu" action="helloworld_greeting_action"/>

    <record id="helloworld_greeting_view_form" model="ir.ui.view">
        <field name="name">问候语表单</field>
        <field name="model">helloworld.greeting</field>
        <field name="arch" type="xml">
            <form>
				<group>
					<field name="message"/>
				</group>
            </form>
        </field>
    </record>ki


    

    <record id="helloworld_greeting_view_tree" model="ir.ui.view">
        <field name="name">问候语列表</field>
        <field name="model">helloworld.greeting</field>
        <field name="arch" type="xml">
            <tree>
                <field name="message"/>
            </tree>
        </field>
    </record>

    <record id="helloworld_greeting_view_search" model="ir.ui.view">
        <field name="name">问候语搜索</field>
        <field name="model">helloworld.greeting</field>
        <field name="arch" type="xml">
            <search>
                <field name="message" string="问候语"/>
            </search>
        </field>
    </record>
</odoo>