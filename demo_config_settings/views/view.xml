<?xml version="1.0"?>
<odoo>
  <record id="settings_form_inherit_custom" model="ir.ui.view">
      <field name="name">res.config.inherit.custom</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
          <xpath expr="//div[hasclass('settings')]" position="inside">
              <div class="app_settings_block" data-string="Custom" string="Custom" data-key="Custom">
                <div id="setup_demo">
                <h2>Odoo Setup Demo</h2>
                    <div class="row mt16 o_settings_container" name="custom_setting_container">
                        <div class="col-xs-12 col-md-6 o_setting_box"
                            id="create_custom_setting"
                            title="Set your demo prefix">
                            <div class="o_setting_left_pane">
                                <label for="demo_prefix" string="Prefix" class="o_light_label"/>
                                <field name="demo_prefix" class="oe_inline"/>
                            </div>
                        </div>
                    </div>
                </div>
              </div>
          </xpath>
      </field>
  </record>
</odoo>